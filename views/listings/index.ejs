<% layout('/layouts/boilerplate') %>
<body>
    <h3>All Listings</h3>
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
  <% for(let l of allListings) { %>
    <div class="col">
      <div class="card h-100">
        <a href="/listings/<%= l._id %>" style="text-decoration: none; color: inherit;">
          <img src="<%= l.image.url %>" class="card-img-top" alt="listing_img">
          <div class="card-body">
            <p class="card-text">
              <%= l.title %><br/>
              &#8377;<%= l.price.toLocaleString("en-IN") %>/night
            </p>
          </div>
        </a>
      </div>
    </div>
  <% } %>
</div>

</body>
      
   
