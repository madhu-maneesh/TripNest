<% layout('/layouts/boilerplate') %>

<section class="home d-flex align-items-center justify-content-center">
  <div class="container text-center">
    <div class="home-content">
      <h1 class="display-4">Welcome to <span class="fw-bold">TripNest</span></h1>
      <i class="fas fa-hotel fa-3x mb-3"></i>
      <p class="lead">Find and book your next adventure with comfort and ease.</p>

      <% if (!currUser) { %>
        <a href="/signup" class="btn btn-primary mt-3">Sign Up Now</a>
        <p class="mt-2">Already a member? <a href="/login" class="text-white text-decoration-underline">Login</a></p>
      <% } else { %>
        <a href="/listings" class="btn btn-success mt-3">Explore Listings</a>
      <% } %>
    </div>
  </div>
</section>

